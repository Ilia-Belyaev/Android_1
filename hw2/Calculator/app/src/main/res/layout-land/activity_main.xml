<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_phone" />

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compat"
            style="@style/MySwitch" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_layout_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:contextClickable="false"
            android:focusable="false"
            android:gravity="end"
            android:text="@string/zero"
            android:textSize="@dimen/text_size" />

        <LinearLayout

            android:id="@+id/linear_layout_1"
            style="@style/layout_style">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pi"
                style="@style/button_style"
                android:text="@string/pi" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                style="@style/button_style"
                android:text="@string/clear" />


            <com.google.android.material.button.MaterialButton

                android:id="@+id/delete"
                style="@style/button_style"
                android:text="@string/delete" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/percent"
                style="@style/button_style"
                android:text="@string/percent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/split"
                style="@style/button_style"
                android:text="@string/split" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_2"
            style="@style/layout_style">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/e"
                style="@style/button_style"
                android:text="@string/e" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven"
                style="@style/number_button_style"
                android:text="@string/seven" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight"
                style="@style/number_button_style"
                android:text="@string/eight" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine"
                style="@style/number_button_style"
                android:text="@string/nine" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/button_style"
                android:text="@string/multiply" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_3"
            style="@style/layout_style">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sqrt"
                style="@style/button_style"
                android:text="@string/sqrt" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four"
                style="@style/number_button_style"
                android:text="@string/four" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five"
                style="@style/number_button_style"
                android:text="@string/five" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six"
                style="@style/number_button_style"
                android:text="@string/six" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtraction"
                style="@style/button_style"
                android:text="@string/subtraction" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_4"
            style="@style/layout_style">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/factorial"
                style="@style/button_style"
                android:text="@string/factorial" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one"
                style="@style/number_button_style"
                android:text="@string/one" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two"
                style="@style/number_button_style"
                android:text="@string/two" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three"
                style="@style/number_button_style"
                android:text="@string/three" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addition"
                style="@style/button_style"
                android:text="@string/addition" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_5"
            style="@style/layout_style">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/absolute"
                style="@style/button_style"
                android:text="@string/absolut" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negative"
                style="@style/button_style"
                android:text="@string/negative" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                style="@style/number_button_style"
                android:text="@string/zero" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/comma"
                style="@style/button_style"
                android:text="@string/comma" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                style="@style/button_style"
                android:text="@string/equal" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
