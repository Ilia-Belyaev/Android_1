<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="layout_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="button_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="number_button_style" parent="button_style">
        <item name="backgroundTint">@color/my_color</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>


</resources>